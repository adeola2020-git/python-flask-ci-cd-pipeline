pipeline {
    agent any
    stages {
        stage ('checkout') {
            steps {
                checkout scmGit(branches: [[name: '*/master']], extensions: [], userRemoteConfigs: [[credentialsId: 'github-private-key', url: 'git@github.com:adeola2020-git/python-flask-ci-cd-pipeline.git']])
            } 
        }
        stage ('Setup') {
            steps {
                sh '''if [ -d ".venv" ]; then
                        echo "**> virtualenv exists"
                    else
                        echo "**> creating virtualenv"
                        virtualenv .venv
                    fi
                    pip install -r requirements.txt'''
            }
        }
        stage ('Build') {
            steps {
              sh '''sudo docker build -t flask-app .
                '''
            }
        }
        stage('env_stage') {
            steps {
               sh '''if [ -d ".venv" ]; then
                        echo "**> virtualenv exists"
                    else
                        echo "**> creating virtualenv"
                        virtualenv .venv
                    fi
                    python3 setup.py
                    '''
                }
        }
        stage('deploy') {
            steps {
               sh '''if [ -d ".venv" ]; then
                        echo "**> virtualenv exists"
                    else
                        echo "**> creating virtualenv"
                        virtualenv .venv
                    fi
                    python3 main.py
                    '''
            }
        }
    }
}