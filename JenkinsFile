pipeline {
    agent any
    
    stages {
        stage('Clone repository') {
            steps {
                git branch: 'master', url: 'https://github.com/cloudboostauk/python-CI-CD-with-Jenkins-and-ArgoCD.git'
            }
        }
        stage('Install dependencies') {
            steps {
                sh 'pip install -r requirements.txt'
            }
        }
      
        stage('Build package') {
            steps {
                timeout(time: 2, unit: 'MINUTES') {
                    sh 'python3 main.py'
                }
            }
        }
        stage('Deploy package') {
            steps {
                withCredentials([sshUserPrivateKey(credentialsId: 'my-ssh-creds', keyFileVariable: 'SSH_KEY', passphraseVariable: '', usernameVariable: 'SSH_USER')]) {
                    sh 'scp -i $SSH_KEY dist/* $SSH_USER@my-server:/path/to/destination'
                }
            }
        }
    }
}
