pipeline {
    agent any
    
    stages {
        stage('Clone repository') {
            steps {
                git branch: 'master', url: 'https://github.com/your-repo-url'
            }
        }
        stage('Install dependencies') {
            steps {
                sh 'pip install -r requirements.txt'
            }
        }
        stage('Run tests') {
            steps {
                sh 'pytest'
            }
        }
        stage('Build package') {
            steps {
                sh 'python setup.py sdist bdist_wheel'
            }
        }
        stage('Deploy package') {
            steps {
                withCredentials([sshUserPrivateKey(credentialsId: 'my-ssh-creds', keyFileVariable: 'SSH_KEY', passphraseVariable: '', usernameVariable: 'SSH_USER')]) {
                    sh 'scp -i $SSH_KEY dist/* $SSH_USER@my-server:/path/to/destination'
                }
            }
        }
    }
}
