pipeline {
    agent any
    
    stages {
        stage('Clone repository') {
            steps {
                git branch: 'master', url: 'https://github.com/cloudboostauk/python-CI-CD-with-Jenkins-and-ArgoCD.git'
            }
        }
        stage('Install dependencies') {
            steps {
                sh 'pip install -r requirements.txt'
            }
        }
      
        stage('Build package') {
            steps {
                timeout(time: 1, unit: 'MINUTES', result: 'SUCCESS') {
                    sh 'python3 main.py'
                }
            }
        }
        stage('Deploy package') {
          steps {
            withAWS(credentials: 'lase', region: 'eu-west-2') {
              sh 'aws s3 cp dist/* s3://my-bucket/path/to/destination'
            }
          }
        }
    }
}
